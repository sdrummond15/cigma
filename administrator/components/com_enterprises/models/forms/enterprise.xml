<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="details" 
              addfieldpath="/administrator/components/com_enterprises/models/fields">
        
        <field name="id" 
               type="text" 
               default="0" 
               readonly="true" 
               class="readonly" 
               label="JGLOBAL_FIELD_ID_LABEL" 
               description="JGLOBAL_FIELD_ID_DESC" 
        />
        
        <field name="name" 
               type="text" 
               class="inputbox" 
               size="40" 
               label="JGLOBAL_NAME" 
               description="JFIELD_NAME_DESC" 
        />
        
        <field name="alias" 
               type="text" 
               class="inputbox" 
               size="40" 
               label="JFIELD_ALIAS_LABEL" 
               description="JFIELD_ALIAS_DESC" 
        />

        <field name="owner_id"
               type="Owners"
               label="COM_ENTERPRISES_FIELD_OWNER_LABEL"
        />

        <field name="business"
               type="checkboxes"
               label="COM_ENTERPRISES_FIELD_BUSINESS_LABEL"
        >
            <option value="1">Vender</option>
            <option value="2">Alugar</option>
            <option value="3">Partilhar</option>
        </field>

        <field name="type"
               type="radio"
               default="1"
               class="btn-group"
               label="COM_ENTERPRISES_FIELD_TYPE_LABEL"
        >
            <option value="1">Residencial</option>
            <option value="2">Comercial</option>
            <option value="3">Residencial e Comercial</option>
            <option value="4">Terreno</option>
        </field>

        <field name="animal"
               type="radio"
               default="0"
               class="btn-group btn-group-yesno"
               label="COM_ENTERPRISES_FIELD_ANIMAL_LABEL"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="featured"
               type="radio"
               default="0"
               class="btn-group btn-group-yesno"
               label="COM_ENTERPRISES_FIELD_FEATURED_LABEL"
               description="COM_ENTERPRISES_FIELD_FEATURED_DESC"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="description"
               type="editor"
               width="300"
               label="JGLOBAL_DESCRIPTION"
               description="COM_ENTERPRISES_FIELD_DESCRIPTION_DESC"
               filter="safehtml"
        />

        <field name="keywords"
               type="textarea"
               label="JFIELD_META_KEYWORDS_LABEL"
               rows="3"
               cols="30"
        />
        
        <field name="published"
               type="list" 
               label="JSTATUS" 
               class="inputbox" 
               size="1" 
               default="1"
        >
            <option value="1">JPUBLISHED</option>
            
            <option value="0">JUNPUBLISHED</option>
            
            <option value="2">JARCHIVED</option>
            
            <option value="-2">JTRASHED</option>
            
        </field>

    </fieldset>

    <fieldset name="midia">
        <field name="video"
               type="url"
               class="inputbox"
               size="40"
               label="COM_ENTERPRISES_FIELD_VIDEO_LABEL"
               hint="http://youtube.com/seuimovel"
        >
        </field>

    </fieldset>

    <fieldset name="address">

        <field name="cep"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_CEP_LABEL"
               required="true"
        />

        <field name="street"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_STREET_LABEL"
               required="true"
        />

        <field name="number"
               type="text"
               class="inputbox"
               size="6"
               label="JFIELD_NUMBER_LABEL"
               required="true"
        />

        <field name="complement"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_COMPLEMENT_LABEL"
        />

        <field name="district"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_DISTRICT_LABEL"
               required="true"
        />

        <field name="region"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_REGION_LABEL"
        />

        <field name="city"
               type="sql"
               default=""
               label="JFIELD_CITY_LABEL"
               query="SELECT id, description FROM #__city"
               key_field="id"
               value_field="description"
               class="city"
               filter="raw"
               required="true"
        >
            <option value="0">Selecione uma cidade</option>
        </field>

        <field name="state"
               type="sql"
               default=""
               label="JFIELD_SELECT_STATE"
               query="SELECT id, description FROM #__state"
               key_field="id"
               value_field="description"
               class="state"
               filter="raw"
               required="true"
        >
            <option value="0">Selecione um estado</option>
        </field>

    </fieldset>

    <fieldset name="characteristics">

        <field name="suites"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_SUITES_LABEL"
               description="JFIELD_SUITES_DESC"
        />

        <field name="bedrooms"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_BEDROOMS_LABEL"
               description="JFIELD_BEDROOMS_DESC"
        />

        <field name="bathrooms"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_BATHROOMS_LABEL"
               description="JFIELD_BATHROOMS_DESC"
        />

        <field name="rooms"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_ROOMS_LABEL"
               description="JFIELD_ROOMS_DESC"
        />

        <field name="garage"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_GARAGE_LABEL"
               description="JFIELD_GARAGE_DESC"
        />

        <field name="garage_desc"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_GARAGE_DESC_LABEL"
               description="JFIELD_GARAGE_DESC_DESC"
               showon="garage!:0[AND]garage!:"
        />

        <field name="total_area"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_TOTAL_AREA_LABEL"
               description="JFIELD_TOTAL_AREA_DESC"
        />

        <field name="building_area"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_BUILDING_AREA_LABEL"
               description="JFIELD_BUILDING_AREA_DESC"
        />

        <field name="gate_keys"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_GATE_KEYS_LABEL"
               description="JFIELD_GATE_KEYS_DESC"
        />

        <field name="gate_controls"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_GATE_CONTROLS_LABEL"
               description="JFIELD_GATE_CONTROLS_DESC"
        />

        <field name="security_alarm"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_SECURITY_ALARM_LABEL"
               description="JFIELD_SECURITY_ALARM_DESC"
        />

    </fieldset>

    <fieldset name="prices">

        <field name="sale_price"
               type="price"
               class="inputbox"
               size="40"
               label="JFIELD_SALE_PRICE_LABEL"
               description="JFIELD_SALE_PRICE_DESC"
        />

        <field name="rent_price"
               type="price"
               class="inputbox"
               size="40"
               label="JFIELD_RENT_PRICE_LABEL"
               description="JFIELD_RENT_PRICE_DESC"
        />

        <field name="sharing_price"
               type="price"
               class="inputbox"
               size="40"
               label="JFIELD_SHARING_PRICE_LABEL"
               description="JFIELD_SHARING_PRICE_DESC"
        />

        <field name="rented"
               type="radio"
               default="0"
               class="btn-group btn-group-yesno"
               label="JFIELD_RENTED_LABEL"
               description="JFIELD_RENTED_DESC"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="date_rented"
               type="calendar"
               label="JFIELD_DATE_RENTED_LABEL"
               description="JFIELD_DATE_RENTED_DESC"
               class="inputbox"
               format="%d/%m/%Y"
               size="10"
               showon="rented:1"
        />

        <field name="condominium"
               type="price"
               class="inputbox"
               size="40"
               label="COM_ENTERPRISES_FIELD_CONDOMINIUM_LABEL"
        />

        <field name="iptu"
               type="price"
               class="inputbox"
               size="40"
               label="JFIELD_IPTU_LABEL"
        />

        <field name="safe"
               type="price"
               class="inputbox"
               size="40"
               label="JFIELD_SAFE_LABEL"
        />

        <field name="market_value"
               type="price"
               class="inputbox"
               size="40"
               label="JFIELD_MARKET_VALUE_LABEL"
               description="JFIELD_MARKET_VALUE_DESC"
        />

    </fieldset>

    <fieldset name="additional_data">

        <field name="registry"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_REGISTRY_LABEL"
               description="JFIELD_REGISTRY_DESC"
               maxlength="20"
        />

        <field name="registry_office"
               type="registry"
               label="JFIELD_REGISTRY_OFFICE_LABEL"
               description="JFIELD_REGISTRY_OFFICE_DESC"
               class="inputbox"
               maxlength="2"
        >

        </field>

        <field name="iptu_register"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_IPTU_REGISTER_LABEL"
               description="JFIELD_IPTU_REGISTER_DESC"
               maxlength="20"
        />

        <field name="energy"
               type="radio"
               label="JFIELD_ENERGY_LABEL"
               description="JFIELD_ENERGY_DESC"
               class="btn-group"
               default="1"
        >
            <option value="1">Sem Instalação</option>
            <option value="2">Coletivo</option>
            <option value="3">Individual Ativa</option>
        </field>

        <field name="number_energy"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_NUMBER_ENERGY_LABEL"
               description="JFIELD_NUMBER_ENERGY_DESC"
               showon="energy:2[OR]energy:3"
               maxlength="20"
        />

        <field name="clock_energy"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_CLOCK_ENERGY_LABEL"
               description="JFIELD_CLOCK_ENERGY_DESC"
               showon="energy:2[OR]energy:3"
               maxlength="20"
        />

        <field name="water"
               type="radio"
               label="JFIELD_WATER_LABEL"
               description="JFIELD_WATER_DESC"
               class="btn-group"
               default="1"
        >
            <option value="1">Sem Instalação</option>
            <option value="2">Coletivo</option>
            <option value="3">Individual Ativa</option>
        </field>

        <field name="number_water"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_NUMBER_WATER_LABEL"
               description="JFIELD_NUMBER_WATER_DESC"
               showon="water:2[OR]water:3"
               maxlength="20"
        />

        <field name="clock_water"
               type="text"
               class="inputbox"
               size="40"
               label="JFIELD_CLOCK_WATER_LABEL"
               description="JFIELD_CLOCK_WATER_DESC"
               showon="water:2[OR]water:3"
               maxlength="20"
        />


    </fieldset>

    <fieldset name="publish">

        <field name="created"
               type="calendar"
               label="JGLOBAL_FIELD_CREATED_LABEL"
               description="JGLOBAL_FIELD_CREATED_DESC"
               class="inputbox"
               size="22"
               format="%Y-%m-%d %H:%M:%S"
               filter="user_utc"
        />

        <field name="created_by"
               type="user"
               label="JGLOBAL_FIELD_CREATED_BY_LABEL"
               description="JGLOBAL_FIELD_CREATED_BY_Desc"
        />

        <field name="modified"
               type="calendar"
               class="readonly"
               label="JGLOBAL_FIELD_MODIFIED_LABEL"
               description="COM_WEBLINKS_FIELD_MODIFIED_DESC"
               size="22"
               readonly="true"
               format="%Y-%m-%d %H:%M:%S"
               filter="user_utc"
        />

        <field name="modified_by"
               type="user"
               label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
               class="readonly"
               readonly="true"
               filter="unset"
        />

        <field name="checked_out"
               type="hidden"
               filter="unset"
        />

        <field name="checked_out_time"
               type="hidden"
               filter="unset"
        />

        <field name="publish_up"
               type="calendar"
               label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
               description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
               class="inputbox"
               format="%Y-%m-%d %H:%M:%S"
               size="22"
               filter="user_utc"
        />

        <field name="publish_down"
               type="calendar"
               label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
               description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
               class="inputbox"
               format="%Y-%m-%d %H:%M:%S"
               size="22"
               filter="user_utc"
        />

    </fieldset>
</form>