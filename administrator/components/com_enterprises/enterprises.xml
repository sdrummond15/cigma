<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1" method="upgrade">
    <name>com_enterprises</name>
    <author>Wanderson Alves</author>
    <creationDate>May 2017</creationDate>
    <copyright>Copyright(C) - 2017 - Sdrummond Soluções em Tecnologia. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>wanderson@sdrummond.com.br</authorEmail>
    <authorUrl>www.sdrummond.com.br</authorUrl>
    <version>3.0.0</version>
    <description>COM_ENTERPRISES_XML_DESCRIPTION</description>

    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>language</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>enterprises.php</filename>
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>router.php</filename>
    </files>
    <languages foldes="site">
        <language tag="pt-BR">language/pt-BR.com_enterprises.ini</language>
    </languages>
    <administration>
        <menu img="class:enterprises">com_enterprises</menu>
        <files folder="admin">
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>language</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <filename>enterprises.php</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>			
        </files>
        <languages foldes="admin">
            <language tag="pt-BR">language/pt-BR.com_enterprises.ini</language>
            <language tag="pt-BR">language/pt-BR.com_enterprises.sys.ini</language>
        </languages>
    </administration>
</extension>

