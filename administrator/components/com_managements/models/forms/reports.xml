<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details"
              addfieldpath="/administrator/components/com_managements/models/fields"
    >

        <field name="id_consultant"
               type="consultantreport"
               label="COM_MANAGEMENTS_FIELD_CONSULTANT"
               default=""
        />

        <field name="id_car"
               type="car"
               label="COM_MANAGEMENTS_FIELD_CAR"
               multiple="multiple"
        />

        <field name="min_cash"
               type="price"
               class="inputbox"
               size="40"
               label="COM_MANAGEMENTS_FIELD_MIN_VALUE"
        />

        <field name="max_cash"
               type="price"
               class="inputbox"
               size="40"
               label="COM_MANAGEMENTS_FIELD_MAX_VALUE"
        />

        <field name="id_client"
               type="client"
               label="COM_MANAGEMENTS_FIELD_CLIENT"
               multiple="multiple"
        />

        <field name="date_in"
               type="calendar"
               label="COM_MANAGEMENTS_FIELD_DATE_IN"
               class="inputbox"
               size="22"
               format="%d-%m-%Y"
               filter="user_utc"
               hint="00-00-0000"
        />

        <field name="date_out"
               type="calendar"
               label="COM_MANAGEMENTS_FIELD_DATE_OUT"
               class="inputbox"
               size="22"
               format="%d-%m-%Y"
               filter="user_utc"
               hint="00-00-0000"
       />

        <field name="pendency"
               type="radio"
               default=""
               class="btn-group btn-group-yesno"
               label="COM_MANAGEMENTS_FIELD_PENDENCY"
        >
            <option value="">ALL</option>
            <option value="0">JYES</option>
            <option value="1">JNO</option>
        </field>

        <field name="order"
               type="list"
               default=""
               class="inputbox"
               label="COM_MANAGEMENTS_FIELD_ORDER"
               multiple="multiple"
        >
              <option value="id_consultant">Consultor</option>
              <option value="id_car">Carro</option>
              <option value="cash">Adiantamento</option>
              <option value="pendency">PendÃªncia</option>
              <option value="date_in">Ida</option>
              <option value="date_out">Volta</option>
              <option value="id_client">Cliente</option>
        </field>

        <field name="order_to"
               type="radio"
               default="ASC"
               class="btn-group btn-group-yesno"
               label="COM_MANAGEMENTS_FIELD_ORDER_TO"
        >
            <option value="ASC">Crescente</option>
            <option value="DESC">Decrescente</option>
        </field>

        <field name="published"
               type="list"
               label="JSTATUS"
               class="inputbox"
               size="1"
               default="1">

            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>

        </field>

    </fieldset>
    <fieldset name="publish"
              label="COM_MANAGEMENTS_GROUP_LABEL_PUBLISHING_DETAILS"
    >

        <field name="created" type="calendar"
               label="JGLOBAL_FIELD_CREATED_LABEL" description="JGLOBAL_FIELD_CREATED_Desc"
               class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
               filter="user_utc"/>

        <field name="created_by"
               type="user"
               label="JGLOBAL_FIELD_CREATED_BY_LABEL"
               description="JGLOBAL_FIELD_CREATED_BY_Desc"
        />

        <field name="publish_up" type="calendar"
               label="COM_MANAGEMENTS_FIELD_PUBLISH_UP_LABEL" description="COM_MANAGEMENTS_FIELD_PUBLISH_UP_DESC"
               class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
               filter="user_utc"/>

        <field name="publish_down" type="calendar"
               label="COM_MANAGEMENTS_FIELD_PUBLISH_DOWN_LABEL" description="COM_MANAGEMENTS_FIELD_PUBLISH_DOWN_DESC"
               class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
               filter="user_utc"/>

    </fieldset>
</form>
