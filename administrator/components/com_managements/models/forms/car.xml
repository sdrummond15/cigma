<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_managements/models/fields"
	>
		<field name="id" 
                       type="text" 
                       default="0"
                       readonly="true"
                       class="readonly"
                       label="JGLOBAL_FIELD_ID_LABEL"
                />
                <field name="placa"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="COM_MANAGEMENTS_FIELD_PLACA_LABEL"
                       required="true" 
                />

		<field name="chassi"
                       type="text" 
                       class="inputbox"
                       size="140"
                       label="JFIELD_CHASSI_LABEL"
                />
                
                <field name="ano"
                       type="text"
                       size="4"
                       label="JFIELD_ANO_LABEL"
                />

                
                <field name="photo" 
                       type="media" 
                       directory="podium"
                       hide_none="1" 
                       label="COM_MANAGEMENTS_FIELD_PHOTO_PODIUM_LABEL"
                       size="40"
                />

                
                <field name="grid_order" 
                       type="text" 
                       class="inputbox"
                       size="10" 
                       label="JFIELD_GRID_ORDER_LABEL"
                />
                
                <field name="published" 
                       type="list" 
                       label="JSTATUS" 
                       class="inputbox" 
                       size="1" 
                       default="1">
                    
                     <option value="1">JPUBLISHED</option>
                     <option value="0">JUNPUBLISHED</option>
                     <option value="2">JARCHIVED</option>
                     <option value="-2">JTRASHED</option>

                 </field>
                                
	</fieldset>
        <fieldset name="publish"
                  label="COM_MANAGEMENTS_GROUP_LABEL_PUBLISHING_DETAILS"
	>

		<field name="created" type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL" description="JGLOBAL_FIELD_CREATED_Desc"
			class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />
                
                <field name="created_by" 
                        type="user" 
                        label="JGLOBAL_FIELD_CREATED_BY_LABEL" 
                        description="JGLOBAL_FIELD_CREATED_BY_Desc" 
                 />

		<field name="publish_up" type="calendar"
			label="COM_MANAGEMENTS_FIELD_PUBLISH_UP_LABEL" description="COM_MANAGEMENTS_FIELD_PUBLISH_UP_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc" />

		<field name="publish_down" type="calendar"
			label="COM_MANAGEMENTS_FIELD_PUBLISH_DOWN_LABEL" description="COM_MANAGEMENTS_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc" />

	</fieldset>
	
</form>
